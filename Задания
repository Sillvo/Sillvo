<?php
$res="";
if(isset($_POST['result']))
{
 $year=$_POST['textfield1'];
 if (is_numeric($year)) 
 {
     if ($year%4!=0 || (($year%100==0) and ($year%400!=0))) $res="НЕТ";
     else $res="ДА";
 }
 else {$res="ОШИБКА ВВЕДЁННЫХ ДАННЫХ";}
}
?>

