<?php
if(isset($_POST['resultprfx'])){
    $pref=$_POST['prfx'];
        $array=explode("\n", $_POST['strings']);
        for ($i=0;$i<(count($array)-1);$i++) {
            $find=stripos($array[$i], $pref);
            if ($find===0)
                $array2[]=$array[$i];
        }
        for ($i=0; $i<(count($array2));$i++) {
            echo $array2[$i];
            echo '<pre>';
        }
}
?>

