<?php
$hipster="";
if(isset($_POST['hiphip']))
{
 $hipst=$_POST['hipst'];
 $sm=$_POST['sm'];
 if ($sm>$hipst) {
     $z=fmod($sm, $hipst);} 
 else {
     $z=fmod($hipst,$sm);}
 if ($z==0) {
     $hipster="Всем досталось поровну"; 
     } else { $hipster= 'Было выброшено ' .$z. ' смузи'; 
     }
     
 }
 echo $hipster;
?>


